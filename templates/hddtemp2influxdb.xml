<?xml version="1.0"?>
<Container version="2">
  <Name>hddtemp2influxdb</Name>
  <Repository>hotio/hddtemp2influxdb</Repository>
  <Registry>https://hub.docker.com/r/hotio/hddtemp2influxdb</Registry>
  <Shell>sh</Shell>
  <Privileged>true</Privileged>
  <Support>https://github.com/hotio/docker-hddtemp2influxdb</Support>
  <Project>https://github.com/hotio/docker-hddtemp2influxdb</Project>
  <Overview>A docker image that reads hdd temperatures using smartctl and writes them to InfluxDB.&#xD;
&#xD;
To change the hostname sent to the influx database, edit the Extra Parameter. For nvmes dont include the namespace, do nvme0 instead of nvme0n1</Overview>
  <Category>Tools: Other:</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/selfhosters/unRAID-CA-templates/master/templates/hddtemp2influxdb.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/selfhosters/unRAID-CA-templates/master/templates/img/hotio-hddtemp2influxdb.png</Icon>
  <ExtraParams>--hostname UnRaid</ExtraParams>
  <DonateText/>
  <DonateLink/>
  <Description>A docker image that reads hdd temperatures using smartctl and writes them to InfluxDB.&#xD;
&#xD;
To change the hostname sent to the influx database, edit the Extra Parameter</Description>
  <Data/>
  <Environment>
    <Variable>
      <Value>30</Value>
      <Name>INTERVAL</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>2</Value>
      <Name>LOG_LEVEL</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>sda;sdb</Value>
      <Name>DEVICES</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>http://127.0.0.1:8086</Value>
      <Name>INFLUXDB_HOST</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>hddtemp2influxdb</Value>
      <Name>INFLUXDB_DB</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>INFLUXDB_USER</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>INFLUXDB_PASS</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>99</Value>
      <Name>PGID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>100</Value>
      <Name>PUID</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="INTERVAL" Target="INTERVAL" Default="30" Mode="" Description="Seconds" Type="Variable" Display="always" Required="false" Mask="false">30</Config>
  <Config Name="LOG_LEVEL" Target="LOG_LEVEL" Default="2" Mode="" Description="Container Variable: LOG_LEVEL" Type="Variable" Display="always" Required="false" Mask="false">2</Config>
  <Config Name="DEVICES" Target="DEVICES" Default="sda;sdb" Mode="" Description="Devices you want it to read from. Usually three letters, listed under the main tab" Type="Variable" Display="always" Required="false" Mask="false">sda;sdb</Config>
  <Config Name="INFLUXDB_HOST" Target="INFLUXDB_HOST" Default="http://127.0.0.1:8086" Mode="" Description="Container Variable: INFLUXDB_HOST" Type="Variable" Display="always" Required="false" Mask="false">http://127.0.0.1:8086</Config>
  <Config Name="INFLUXDB_DB" Target="INFLUXDB_DB" Default="hddtemp2influxdb" Mode="" Description="Container Variable: INFLUXDB_DB" Type="Variable" Display="always" Required="false" Mask="false">hddtemp2influxdb</Config>
  <Config Name="INFLUXDB_USER" Target="INFLUXDB_USER" Default="" Mode="" Description="Container Variable: INFLUXDB_USER" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="INFLUXDB_PASS" Target="INFLUXDB_PASS" Default="" Mode="" Description="Container Variable: INFLUXDB_PASS" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="PGID" Target="PGID" Default="99" Mode="" Description="Container Variable: PGID" Type="Variable" Display="advanced-hide" Required="false" Mask="false">99</Config>
  <Config Name="PUID" Target="PUID" Default="" Mode="" Description="Container Variable: PUID" Type="Variable" Display="advanced-hide" Required="false" Mask="false">100</Config>
</Container>